---
import Logo from './Logo.astro';
import Socials from '../shared/components/Socials.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<div
  class="fixed inset-x-0 top-0 z-50 flex items-center justify-between gap-8 border-b border-stone-200/60 bg-white/80 p-4 drop-shadow-sm backdrop-blur dark:border-stone-800/60 dark:bg-stone-900/80"
>
  <a href="/">
    <Logo />
  </a>

  <div class="flex gap-4">
    <div class="hidden gap-4 md:flex">
      <Socials />
      <div class="border-l border-stone-300 dark:border-stone-600"></div>
    </div>
    <ThemeToggle />
  </div>
</div>
