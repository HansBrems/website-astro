---
import Logo from './Logo.astro';
import Socials from '../shared/components/Socials.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<div
  class="flex items-center justify-between gap-8 border-b bg-white p-4 drop-shadow-sm dark:border-stone-800 dark:bg-stone-900"
>
  <a href="/">
    <Logo />
  </a>

  <div class="flex gap-4">
    <div class="hidden gap-4 md:flex">
      <Socials />
      <div class="border-l border-stone-300 dark:border-stone-600"></div>
    </div>
    <ThemeToggle />
  </div>
</div>
