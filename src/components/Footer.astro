---
import MailIcon from './MailIcon.astro';
import TwitterIcon from './TwitterIcon.astro';
import GithubIcon from './GithubIcon.astro';
import LinkedInIcon from './LinkedInIcon.astro';
---

<style>
  .link {
    color: var(--color-900);
  }

  .link:hover {
    color: var(--color-accent-light);
  }

  .socials {
    display: flex;
    gap: 2rem;
  }

  .container {
    display: flex;
    align-items: start;
    justify-content: space-between;
    gap: 2rem;
  }
</style>

<footer>
  <div class="container">
    <small>
      <span>Longville Software BV {new Date().getFullYear()}</span>
    </small>

    <div class="socials">
      <a
        class="link"
        href="mailto:info@longville-software.be?subject=Mail from Longville-Software.be"
      >
        <MailIcon />
      </a>

      <a class="link" href="https://www.linkedin.com/in/hansbrems">
        <LinkedInIcon />
      </a>

      <a class="link" href="https://github.com/HansBrems">
        <GithubIcon />
      </a>

      <a class="link" href="https://twitter.com/longvillesw">
        <TwitterIcon />
      </a>
    </div>
  </div>
</footer>
